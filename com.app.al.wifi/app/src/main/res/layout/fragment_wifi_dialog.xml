<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.fragment.WifiDialogFragment"
    >
  <data>
    <variable
        name="viewModel"
        type="com.app.al.wifi.viewmodel.WifiListViewModel"
        />
  </data>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:padding="@dimen/dialog_padding"
      >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wifi_signal_strength"
        android:textColor="#80000000"
        android:textSize="@dimen/dialog_item_title"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@{viewModel.capabilities}"
        android:textColor="#000000"
        android:textSize="@dimen/dialog_item_entry"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="@string/wifi_ssid"
        android:textColor="#80000000"
        android:textSize="@dimen/dialog_item_title"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@{viewModel.ssId}"
        android:textColor="#000000"
        android:textSize="@dimen/dialog_item_entry"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="@string/wifi_security"
        android:textColor="#80000000"
        android:textSize="@dimen/dialog_item_title"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@{viewModel.capabilities}"
        android:textColor="#000000"
        android:textSize="@dimen/dialog_item_entry"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="@string/wifi_password"
        android:textColor="#80000000"
        android:textSize="@dimen/dialog_item_title"
        />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:passwordToggleDrawable="@mipmap/ic_launcher"
        >

      <EditText
          android:id="@+id/password"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:inputType="textPassword"
          />
    </android.support.design.widget.TextInputLayout>
  </LinearLayout>
</layout>